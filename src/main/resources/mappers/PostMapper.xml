<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace = "com.ashspell.ingstagram.post.dao.PostDAO">
 	<insert id = "insertPost" parameterType = "map"> 
 		INSERT INTO `post`
 		(	
 		`userId`
 		, `subject`
 		, `content`
 		, `imagePath`
 		, `createdAt`
 		, `updatedAt`
 		) value (
 		#{userId}
 		, #{subject}
 		, #{content}
 		, #{filePath}
 		, now()
 		, now()
 		
 		)
 		
 	
 	</insert>
 
 	<select id = "selectPostList" parameterType = "int" resultType = "com.ashspell.memo.post.model.Post">
		SELECT 
			`id`
			,`userId`
 		, `subject`
 		, `content`
 		, `createdAt`
 		, `updatedAt`	
 		FROM
 			`post`
 		WHERE
 			`userId` = #{userId}
 		ORDER BY `id`DESC
 	</select>
 	
 	<select id = "selectPost" parameterType = "int" resultType = "com.ashspell.memo.post.model.Post">
 		SELECT 
			`id`
			,`userId`
 		, `subject`
 		, `content`
 		, `createdAt`
 		, `updatedAt`	
 		FROM
 			`post`
 		WHERE
 			`id` = #{id}
 	</select>
 
 
 </mapper>